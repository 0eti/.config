// Place your key bindings in this file to override the defaultsauto[]
[
  // pane navigation
  { "key": "ctrl+h", "command": "workbench.action.navigateLeft" },
  { "key": "ctrl+l", "command": "workbench.action.navigateRight" },
  { "key": "ctrl+j", "command": "workbench.action.navigateDown" },
  { "key": "ctrl+k", "command": "workbench.action.navigateUp" },
  {
    "key": "ctrl-w ctrl-w",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "!terminalFocus && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl-w ctrl-w",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!terminalFocus && filesExplorerFocus"
  },

  // file explorer
  {
    "key": "cmd+n",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus"
  },
  {
    "key": "cmd+shift+n",
    "command": "explorer.newFolder",
    "when": "filesExplorerFocus"
  },

  // translation
  {
    "key": "ctrl+t",
    "command": "completeTranslate",
    "when": "editorTextFocus"
  }
]
